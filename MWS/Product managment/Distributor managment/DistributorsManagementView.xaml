<UserControl x:Class="MWS.Product_managment.Distributor_managment.DistributorsManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MWS.Product_managment.Distributor_managment"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Viewbox HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid Height="474" Width="835">
            <ListView x:Name="distributorsList"  ItemsSource="{Binding _distributorsList}" Margin="0,101,0,0" Background="#4DFFFFFF" SelectedItem="{Binding SelectedProduct}" >
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" Width="auto" DisplayMemberBinding="{Binding DistributorID}" />
                        <GridViewColumn Header="Name" Width="100" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="KRS" Width="100" DisplayMemberBinding="{Binding Category.Name}" />
                        <GridViewColumn Header="REGON" Width="100" DisplayMemberBinding="{Binding List_Price}"/>
                        <GridViewColumn Header="Email" Width="100" DisplayMemberBinding="{Binding Distributor.Name}"/>
                        <GridViewColumn Header="WWW" Width="100" DisplayMemberBinding="{Binding Developer.Name}"/>
                        <GridViewColumn Header="Country" Width="auto" DisplayMemberBinding="{Binding Quantity}"/>
                        <GridViewColumn Header="City" Width="auto" DisplayMemberBinding="{Binding Quantity}"/>
                        <GridViewColumn Header="Street" Width="auto" DisplayMemberBinding="{Binding Quantity}"/>
                        <GridViewColumn Header="" Width="auto">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding ElementName=distributorsList, Path=DataContext.ButtonEdit}" CommandParameter="{Binding}">
                                        <TextBlock Text="Edit" />
                                    </Button>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="" Width="auto">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding ElementName=distributorsList, Path=DataContext.ButtonDelete}" CommandParameter="{Binding}">
                                        <TextBlock Text="Delete" />
                                    </Button>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <Label Content="All distributors" HorizontalAlignment="Center" Margin="0,-10,0,0" VerticalAlignment="Top" FontSize="36" Foreground="#FF010F84"/>
            <TextBox Text="{Binding productID, Mode=TwoWay}" HorizontalAlignment="Left" Height="24" Margin="137,53,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="233" />
            <Label Content="Distributor name" HorizontalAlignment="Left" Margin="10,53,0,0" VerticalAlignment="Top" Background="#FF1AA74A" Foreground="#FFF0ECEC" RenderTransformOrigin="2.525,0.551" Width="127" Height="24"/>
            <Button Command="{Binding Path = FindDistributorButton}" 
                    CommandParameter="ParameterValue"  Content="Find distributor" Margin="370,53,371,397" Background="#FF1E8AC2" Foreground="White" RenderTransformOrigin="1.21,0.513"/>
            <Button Command="{Binding Path = AddDistributorButton}" 
                CommandParameter="ParameterValue" Content="Add new dostributor" Margin="698,53,10,397" Background="#FF1E8AC2" Foreground="White"/>

        </Grid>
    </Viewbox>
</UserControl>
